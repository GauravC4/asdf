<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mrc.gaurav.asdf.LoginActivity">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="88dp"
        app:srcCompat="@mipmap/ic_login_image"
        android:id="@+id/imageView"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="144dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:drawableLeft="@drawable/ic_login_username"
        android:hint="@string/username"
        android:id="@+id/login_username"
        android:textColor="@android:color/black"
        android:drawablePadding="5dp"
        android:textColorHint="@android:color/holo_green_dark"
        android:elevation="25dp"
        android:backgroundTint="@android:color/background_light"
        android:hapticFeedbackEnabled="true"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton2"
        app:layout_constraintLeft_toLeftOf="@+id/toggleButton2"
        app:layout_constraintRight_toRightOf="@+id/toggleButton2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/login_password"
        android:drawableLeft="@drawable/ic_login_password"
        android:hint="@string/password"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/holo_green_dark"
        android:drawablePadding="5dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/login_username"
        android:hapticFeedbackEnabled="true"
        app:layout_constraintLeft_toLeftOf="@+id/login_username"
        app:layout_constraintRight_toRightOf="@+id/login_username"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:text="@string/login"
        android:ems="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:hapticFeedbackEnabled="true"
        android:elevation="10dp"
        android:translationZ="10dp"
        android:background="@drawable/button_login"
        app:layout_constraintLeft_toLeftOf="@+id/login_password"
        app:layout_constraintRight_toRightOf="@+id/login_password"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/login_password" />

    <ToggleButton
        android:text="@string/admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton2"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        android:background="@drawable/button_login"/>

</android.support.constraint.ConstraintLayout>
